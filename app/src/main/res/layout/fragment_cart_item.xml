    <com.androidnetworking.widget.ANImageView
        android:id="@+id/imgImageView"
        android:layout_width="@dimen/common_image_width"
        android:layout_height="wrap_content"
        android:src="@drawable/img_default"
        android:background="@drawable/xml_view_bg_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:textAppearance="@style/TextStyle_Name"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/imgImageView"
        app:layout_constraintTop_toTopOf="@+id/imgImageView" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="price"
        android:textAppearance="@style/TextStyle_Price"
        app:layout_constraintStart_toStartOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

<!--    <com.sag.sagpro.widgets.ItemNoAdjustView-->
    <com.sag.sagpro.widgets.ItemNoAdjustView
        android:id="@+id/numberAdjustView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bule"
        android:text="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>