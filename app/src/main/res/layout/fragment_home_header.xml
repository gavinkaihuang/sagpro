<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_middle">

    <com.youth.banner.Banner
        android:id="@+id/viewBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_button_shap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageButton
        android:id="@+id/categoriesButton"
        style="@style/roundbutton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_weight="0.5"
        android:gravity="center"
        android:background="@drawable/categories"
        app:layout_constraintEnd_toStartOf="@+id/productButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBanner" />

    <ImageButton
        android:id="@+id/productButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:background="@drawable/products"
        app:layout_constraintStart_toEndOf="@+id/categoriesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/categoriesButton" />


</androidx.constraintlayout.widget.ConstraintLayout>
